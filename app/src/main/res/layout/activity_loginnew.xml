<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0f0f0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@drawable/barbg"
        android:gravity="center_vertical">

        <TextView
            android:id="@id/title_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="75.0dip"
            android:paddingRight="75.0dip"
            android:singleLine="true"
            android:text="配送员登陆"
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="200.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_margin="60.0dip"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="10.0dip">

        <LinearLayout
            android:id="@id/linear_name"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/login_kuang_gray"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/image_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6.0dip"
                android:src="@drawable/login_name_gray" />

            <EditText
                android:id="@id/editText1"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="10.0dip"
                android:background="@null"
                android:ems="10"
                android:hint="配送登陆帐号"
                android:textColorHint="#ffaaaaaa" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/linear_pass"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/login_kuang_gray"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/image_pass"
                android:layout_width="wrap_content"
                android:layout_height="38.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7.0dip"
                android:src="@drawable/login_password_gray" />

            <EditText
                android:id="@id/editText2"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="10.0dip"
                android:background="@null"
                android:ems="10"
                android:hint="密码"
                android:inputType="textPassword"
                android:textColorHint="#ffaaaaaa" />
        </LinearLayout>

        <Button
            android:id="@id/button1"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="50.0dip"
            android:background="@drawable/login_button_red"
            android:gravity="center"
            android:text="登   录"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />
    </LinearLayout>
</LinearLayout>