<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0f0f0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@drawable/barbg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@id/back"
            android:layout_width="40.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/btnbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="75.0dip"
            android:paddingRight="75.0dip"
            android:singleLine="true"
            android:text="收入统计"
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:layout_marginTop="8.0dip"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:text="选择日期"
            android:textSize="15.0sp" />

        <TextView
            android:id="@id/tv_starttimte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-1-1"
            android:textSize="15.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:text="至"
            android:textSize="15.0sp" />

        <TextView
            android:id="@id/tv_endtimte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-2-2"
            android:textSize="15.0sp" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <ImageView
            android:id="@id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:src="@drawable/chaxun" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120.0dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:orientation="vertical">

            <TextView
                android:id="@id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30.0dip"
                android:text=""
                android:textColor="#ffff0000"
                android:textSize="25.0sp" />

            <TextView
                android:id="@id/daydet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15.0dip"
                android:text="今日收入"
                android:textSize="12.0sp" />
        </LinearLayout>

        <TextView
            android:layout_width="1.0dip"
            android:layout_height="80.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="#ffeeeeee" />

        <LinearLayout
            android:id="@id/sales_ll2"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:orientation="vertical">

            <TextView
                android:id="@id/daynum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30.0dip"
                android:text=""
                android:textColor="#ffff0000"
                android:textSize="25.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15.0dip"
                android:text="抢单数量"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/sta_ll2"
        android:layout_width="fill_parent"
        android:layout_height="120.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/sales_ll4"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:orientation="vertical">

            <TextView
                android:id="@id/week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30.0dip"
                android:text=""
                android:textColor="#ffff0000"
                android:textSize="25.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15.0dip"
                android:text="本周收入"
                android:textSize="12.0sp" />
        </LinearLayout>

        <TextView
            android:layout_width="1.0dip"
            android:layout_height="80.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="#ffeeeeee" />

        <LinearLayout
            android:id="@id/sales_ll5"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:orientation="vertical">

            <TextView
                android:id="@id/weeknum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30.0dip"
                android:text=""
                android:textColor="#ffff0000"
                android:textSize="25.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15.0dip"
                android:text="抢单数量"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/sta_ll3"
        android:layout_width="fill_parent"
        android:layout_height="120.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:orientation="vertical">

            <TextView
                android:id="@id/mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30.0dip"
                android:text=""
                android:textColor="#ffff0000"
                android:textSize="25.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15.0dip"
                android:text="本月收入"
                android:textSize="12.0sp" />
        </LinearLayout>

        <TextView
            android:layout_width="1.0dip"
            android:layout_height="80.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="#ffeeeeee" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:orientation="vertical">

            <TextView
                android:id="@id/monnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30.0dip"
                android:text=""
                android:textColor="#ffff0000"
                android:textSize="25.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15.0dip"
                android:text="抢单数量"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_sb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="#ffffffff"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120.0dip"
            android:layout_marginTop="10.0dip"
            android:text="&lt;"
            android:textColor="#ff999999"
            android:textSize="20.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10.0dip"
            android:text="返回上一步"
            android:textColor="#ff999999"
            android:textSize="18.0sp" />
    </LinearLayout>
</LinearLayout>